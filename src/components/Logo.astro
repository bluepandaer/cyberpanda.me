---
import { SITE } from 'astrowind:config';
import favicon from '~/assets/favicons/favicon.svg';
---

<span
  class="self-center flex items-center text-2xl md:text-xl font-bold text-gray-900 whitespace-nowrap dark:text-white"
>
  <img 
    src={favicon.src} 
    alt="CyberPanda Logo" 
    class="w-6 h-6 md:w-7 md:h-7 mr-2.5 object-contain"
  />
  {SITE?.name}
</span>
