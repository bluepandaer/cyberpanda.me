---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Features2 from '~/components/widgets/Features2.astro';
import { languages } from '~/i18n/config';
import { useTranslations } from '~/i18n/utils';

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({
    params: { lang }
  }));
}

const { lang } = Astro.params;
const t = useTranslations(lang);

const metadata = {
  title: t('nav.contact'),
};
---

<Layout metadata={metadata} lang={lang}>
  <!-- HeroText Widget ******************* -->
  <HeroText 
    tagline={t('nav.contact')} 
    title={lang === 'zh' ? '与我联系！' : "Let's Connect!"} 
    subtitle={
      lang === 'zh' 
        ? '如果您对AI工具有任何疑问，或者想要分享使用心得，欢迎通过邮件与我交流。'
        : 'If you have any questions about AI tools or want to share your experience, feel free to reach out via email.'
    }
  />

  <!-- Features2 Widget ************** -->
  <Features2
    title={lang === 'zh' ? '联系方式' : 'Contact Information'}
    subtitle={lang === 'zh' ? '我通常在24小时内回复邮件' : 'I typically respond to emails within 24 hours'}
    items={
      lang === 'zh' ? [
        {
          title: '邮件联系',
          description: '有任何问题或建议，欢迎通过邮件与我交流，我会尽快回复。\n📧 hello@cyberpanda.me',
          icon: 'tabler:mail',
        },
        {
          title: '社交媒体',
          description: '关注我的社交媒体账号，获取最新的AI工具资讯和使用技巧分享。\n🐦 @cyberpanda_me',
          icon: 'tabler:brand-twitter',
        },
        {
          title: 'AI工具咨询',
          description: '关于ChatGPT、Claude、Midjourney等AI工具的使用技巧、功能介绍、应用场景等问题。',
          icon: 'tabler:brain',
        },
        {
          title: '学习指导',
          description: '为初学者提供AI工具学习路径规划，帮助您快速上手并掌握核心功能。',
          icon: 'tabler:school',
        },
        {
          title: '实战案例分享',
          description: '分享真实的AI工具应用案例，帮助您更好地理解如何在实际工作中使用这些工具。',
          icon: 'tabler:presentation',
        },
        {
          title: '基地',
          description: '数字世界的某个角落',
          icon: 'tabler:map-pin',
        },
      ] : [
        {
          title: 'Email Contact',
          description: 'Have any questions or suggestions? Feel free to reach out via email, and I will get back to you as soon as possible.\n📧 hello@cyberpanda.me',
          icon: 'tabler:mail',
        },
        {
          title: 'Social Media',
          description: 'Follow my social media accounts for the latest AI tool news and usage tips.\n🐦 @cyberpanda_me',
          icon: 'tabler:brand-twitter',
        },
        {
          title: 'AI Tool Consultation',
          description: 'Questions about usage tips, features, and application scenarios for ChatGPT, Claude, Midjourney and other AI tools.',
          icon: 'tabler:brain',
        },
        {
          title: 'Learning Guidance',
          description: 'Provide AI tool learning path planning for beginners to help you get started quickly and master core functions.',
          icon: 'tabler:school',
        },
        {
          title: 'Practical Case Sharing',
          description: 'Share real AI tool application cases to help you better understand how to use these tools in actual work.',
          icon: 'tabler:presentation',
        },
        {
          title: 'Base',
          description: 'Somewhere in the digital world',
          icon: 'tabler:map-pin',
        },
      ]
    }
  />
</Layout>