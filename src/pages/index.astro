---
// Client-side language detection and redirect for static builds
---

<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Redirecting...</title>
  <script>
    // Language detection and redirect logic
    (function() {
      // Default language
      let preferredLang = 'zh';
      
      // Check for saved preference in localStorage
      const savedLang = localStorage.getItem('preferred-lang');
      if (savedLang && (savedLang === 'zh' || savedLang === 'en')) {
        preferredLang = savedLang;
      } else {
        // Detect from browser language
        const browserLang = navigator.language || (navigator as any).userLanguage;
        if (browserLang) {
          const langCode = browserLang.split('-')[0].toLowerCase();
          if (langCode === 'en') {
            preferredLang = 'en';
          }
        }
      }
      
      // Save preference
      localStorage.setItem('preferred-lang', preferredLang);
      
      // Redirect to language-specific homepage
      window.location.replace('/' + preferredLang);
    })();
  </script>
  <noscript>
    <meta http-equiv="refresh" content="0; url=/zh">
  </noscript>
</head>
<body>
  <div style="display: flex; align-items: center; justify-content: center; height: 100vh; font-family: system-ui, sans-serif;">
    <div style="text-align: center;">
      <p>Redirecting...</p>
      <p style="margin-top: 20px;">
        <a href="/zh">中文</a> | <a href="/en">English</a>
      </p>
    </div>
  </div>
</body>
</html>