---
import Layout from '~/layouts/Layout.astro';
import Header from '~/components/widgets/Header.astro';
import Footer from '~/components/widgets/Footer.astro';
import Announcement from '~/components/widgets/Announcement.astro';

import { getHeaderData, footerData } from '~/navigation';
import { getLangFromUrl } from '~/i18n/utils';

import type { MetaData } from '~/types';

export interface Props {
  metadata?: MetaData;
  lang?: string;
}

const { metadata, lang } = Astro.props;
const currentLang = lang || getLangFromUrl(Astro.url);
const headerData = getHeaderData(currentLang);
---

<Layout metadata={metadata}>
  <slot name="announcement">
    <Announcement />
  </slot>
  <slot name="header">
    <Header {...headerData} isSticky showRssFeed showToggleTheme showLanguagePicker lang={currentLang} />
  </slot>
  <main>
    <slot />
  </main>
  <slot name="footer">
    <Footer {...footerData} />
  </slot>
</Layout>
